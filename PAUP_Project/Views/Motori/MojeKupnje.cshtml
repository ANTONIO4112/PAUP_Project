@model List<PAUP_Project.Models.Racun>

@{
    ViewBag.Title = "Moje Kupnje";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var euroCulture = new System.Globalization.CultureInfo("eu"); // Postavljamo CultureInfo za eure
}

<div class="container">
    <h2>Moje Kupnje</h2>

    @if (Model.Count == 0)
    {
        <p>Trenutno nemate računa za prikaz.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Rbr.</th>
                    <th>Datum kupnje</th>
                    <th>Ukupan iznos</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var racun in Model)
                {
                    <tr>
                        <td>@racun.RacunID</td>
                        <td>@racun.DatumKupnje.ToString("dd.MM.yyyy. HH:mm")</td>
                        <td>@racun.UkupanIznos.ToString("C", euroCulture)</td>
                        <td>
                            @Html.ActionLink("Detalji", "DetaljiRacunaZaKupca", new { id = racun.RacunID }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Povratak na popis motora", "PopisZaKorisnika", "Motori", null, new { @class = "btn btn-primary" })
    }

</div>
